{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lexbot.approval.schema.json",
  "title": "Lexbot Approval Request",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "req_id",
    "task_id",
    "risk_class",
    "reason",
    "diff_summary_ref",
    "requested_at",
    "requested_by",
    "approve_instructions",
    "approved_at",
    "approved_by"
  ],
  "properties": {
    "req_id": { "type": "string", "minLength": 1 },
    "task_id": { "type": "string", "minLength": 1 },
    "risk_class": {
      "type": "string",
      "enum": ["safe_read", "safe_write", "risky_write", "destructive"]
    },
    "reason": { "type": "string", "minLength": 1 },
    "diff_summary_ref": { "type": ["string", "null"] },
    "requested_at": { "type": "string", "format": "date-time" },
    "requested_by": { "type": "string", "minLength": 1 },
    "approve_instructions": { "type": "string", "minLength": 1 },
    "approved_at": { "type": ["string", "null"], "format": "date-time" },
    "approved_by": { "type": ["string", "number", "null"] }
  }
}
