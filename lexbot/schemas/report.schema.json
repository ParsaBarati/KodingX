{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lexbot.report.schema.json",
  "title": "Lexbot Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "task_id",
    "agent",
    "started_at",
    "ended_at",
    "status",
    "summary",
    "actions_taken",
    "files_changed",
    "tests_run",
    "test_results",
    "artifacts",
    "error_signature",
    "confidence"
  ],
  "properties": {
    "task_id": { "type": "string", "minLength": 1 },
    "agent": { "type": "string", "minLength": 1 },
    "started_at": { "type": "string", "format": "date-time" },
    "ended_at": { "type": "string", "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["success", "fail", "needs_approval", "blocked"]
    },
    "summary": { "type": "string", "minLength": 1 },
    "actions_taken": {
      "type": "array",
      "items": { "type": "string" }
    },
    "files_changed": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tests_run": {
      "type": "array",
      "items": { "type": "string" }
    },
    "test_results": {
      "type": "string",
      "enum": ["pass", "fail", "unknown"]
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "path"],
        "properties": {
          "kind": { "type": "string" },
          "path": { "type": "string" }
        }
      }
    },
    "error_signature": { "type": ["string", "null"] },
    "next_suggestion": {
      "type": "string",
      "enum": ["verify", "heal", "close", "ask_user"]
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
